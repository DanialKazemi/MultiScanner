<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.danial.multiscanner.Danial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolBar1"
                layout="@layout/toolbar_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="false" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:tint="#90FFFFFF"
                android:tintMode="src_over"
                app:srcCompat="@drawable/result_gradient" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/laptop"
                    android:tint="#99455A64" />


                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgMainAvatar"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ava16"
                            app:civ_border_color="#88FFFFFF"
                            app:civ_border_width="2dp" />

                        <ImageView
                            android:id="@+id/imgEmail"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/email_logo" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtDanial"
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/main_gradient"
                        android:gravity="center"
                        android:text="Danial Kazemi"
                        android:textColor="#FFE83F"
                        android:textSize="@dimen/_30sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Programmer"
                        android:textColor="#FFE83F"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout3">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:gravity="left|right"
                        android:text="Hi! I wish You've enjoyed this app!\n\nIf You had any suggestion or question, contact me at markets comment section ,or by my Email:\ndanikazemi1380@gmail.com\n\nKind Regards,\nDanial Kazemi
\n\nMultiScanner - v1.9.1 - October 2018\nLatest Changes:\n    -Better live scanning performance\n    -Filter out bad results after multi-scanning\n    -Help section added\n    -AR improved\n    -Bugs on Android 5 Fixed"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
